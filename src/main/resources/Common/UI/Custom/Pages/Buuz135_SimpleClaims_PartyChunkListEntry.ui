$C = "../Common.ui";
Group {
  LayoutMode: Left;
  Anchor: ( Height: 30, Bottom: 5);
  FlexWeight: 1;
  Background: $C.@InputBoxBackground;
  Padding: (Top: 4, Bottom: 4);

  Label {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #93844c
    );
    Anchor: (Left: 10, Vertical: 0);
    Padding: (Right: 5);
    Text: "World: ";
  }

  Label #ChunkWorldName {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #ffffff
    );
    Anchor: (Left: 1, Vertical: 0);
    Padding: (Right: 5);
  }

  Label {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #93844c
    );
    Anchor: (Left: 10, Vertical: 0);
    Padding: (Right: 5);
    Text: "Center: ";
  }

  Label #ChunkPosName {
    Style: (
      FontSize: 16,
      RenderBold: true,
      TextColor: #ffffff
    );
    Anchor: (Left: 1, Vertical: 0);
    Padding: (Right: 5);
  }

  Label {
    FlexWeight: 1;
  }

  $C.@SecondaryTextButton #TeleportButton {
    Anchor: (Width: 130, Right: 10, Vertical: 0);
    Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
    Text: "Teleport";
    Overscroll: false;
    Visible: false;
  }
  $C.@CancelTextButton #UnclaimButton {
      Anchor: (Right: 10, Vertical: 0);
      Padding: (Left: 8, Right: 8, Top: 4, Bottom: 4);
      Text: "Unclaim";
      Overscroll: false;
    }
}