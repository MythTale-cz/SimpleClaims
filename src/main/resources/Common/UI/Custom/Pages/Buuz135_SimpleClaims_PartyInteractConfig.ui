$C = "../Common.ui";

$C.@PageOverlay {

  $C.@DecoratedContainer {
    Anchor: (Width: 340, Height: 230);

    #Title {

      TextButton #BackButton {
        Anchor: (Left: 12, Top: 4, Width: 64, Height: 24);
        Padding: (Left: 8, Top: 2);
        Text: "< Back";
        Style: TextButtonStyle(
          Default: (LabelStyle: (FontSize: 14, TextColor: #93844c, RenderBold: true)),
          Sounds: $C.@ButtonSounds,
        );
        Background: #000000(0.13);
      }

      Group {
        $C.@Title #TitleText{
          @Text = "INTERACTION SETTINGS";
        }

      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;
        Padding: (Left: 40);
          $C.@CheckBoxWithLabel #InteractBlocksSetting {
            @Text = "Allow Block Interaction";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractChestSetting {
            @Text = "Allow Chest Interaction";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractDoorSetting {
            @Text = "Allow Door Interaction";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractBenchSetting {
            @Text = "Allow Bench Interaction";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractChairSetting {
            @Text = "Allow Chair Interaction";
            Padding: (Bottom: 4);
          }
          $C.@CheckBoxWithLabel #InteractPortalSetting {
            @Text = "Allow Portal Interaction";
            Padding: (Bottom: 4);
          }
      }
    }
  }
}

$C.@BackButton {}