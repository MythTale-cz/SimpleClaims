$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 700, Height: 669);

    #Title {
      Group {
        $C.@Title {
          @Text = "Vsechny party na Serveru";
        }

        $C.@HeaderSearch {}
      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group #PartyList {
          Anchor: (Width: 680);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 10);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #PartyCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$C.@BackButton {}